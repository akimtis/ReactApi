import React, { Component } from 'react';
import { Text, View, StyleSheet, ListView , TextInput } from 'react-native';
import { Constants } from 'expo';

export default class App extends Component {
    constructor() {
    super();
    const ds = new ListView.DataSource({rowHasChanged: (r1, r2) => r1 !== r2});
    this.state = {
      projects: ds.cloneWithRows([]),
      studentId: "2"
    };
  }

  componentDidMount(){
    console.log("test")
    fetch("https://react-locus.herokuapp.com/view/1")
    .then(res => res.json())
    .then(projects => {
      console.log(projects[1]);
      this.setState({
        projects : this.state.projects.cloneWithRows(projects)
      })
    })
  }
  
  render() {
    return (

      <View style={styles.container}>
       <View style={styles.header}> 
       <Text style={styles.h2}> Locus</Text>
       </View> 
        <Text style={styles.paragraph}>
          Projects list for student id: {this.state.studentId}
        </Text>
        
        <Text style={styles.heading}>Enter Student ID</Text>
        <TextInput
          style={styles.input}
          defaultValue="studentId"
          onChangeText={(text) => this.setState({studentId: text})}
        />

      <ListView
        dataSource={this.state.projects}
        renderRow={(project) => <Text style={styles.item}>Project: {project.name} | Project: {project.name} | Instructions: {project.instructions}</Text>}
      />

      </View>
    );
  }
}

const styles = StyleSheet.create({
  container: {
    flex: 1,
    alignItems: 'center',
    justifyContent: 'center',
    paddingTop: Constants.statusBarHeight,
    backgroundColor: '#78bcaf',
  },
  h2: {
    fontSize: 18,
    fontWeight: 'bold',
    textAlign: 'center',
    marginTop:10,
    color: 'blue',
    backgroundColor:'lightblue',
  },
  header:{
    alignSelf: 'strech',
    flexDirection: 'row',
    backgroundColor: '#849974',
  },
  paragraph: {
    margin: 24,
    fontSize: 18,
    fontWeight: 'bold',
    textAlign: 'center',
    color: '#34495e',
  },
  item: {
    marginTop: 10,
  },
  input:{
    width: 200, 
    height: 44, 
    padding: 8 , 
    border: 2 , 
    borderStyle :'solid'
  }
  
});
